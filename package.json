{
    "name": "daze.api",
    "version": "1.0.0",
    "author": "afractal",
    "description": "Back-end for afractal blog.",
    "main": "index.js",
    "license": "GPL-3.0",
    "private": true,
    "homepage": "https://github.com/afractal/Daze.Api#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/afractal/Daze.Api.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/Daze.Api/issues"
    },
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "compression": "^1.7.1",
        "dotenv": "^5.0.1",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "express-validator": "^5.0.3",
        "request-promise": "^4.2.2",
        "winston": "^2.4.1",
        "cors": "^2.8.4",
        "humps": "^2.0.1",
        "pg": "^7.4.1",
        "ramda": "^0.25.0",
        "swagger-ui-express": "^3.0.5"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/body-parser": "^1.16.8",
        "@types/compression": "^0.0.36",
        "@types/cors": "^2.8.3",
        "@types/dotenv": "^4.0.2",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.11.1",
        "@types/humps": "^1.1.2",
        "@types/jest": "^22.1.3",
        "@types/morgan": "^1.7.35",
        "@types/node": "^9.6.0",
        "@types/pg": "^7.4.5",
        "@types/ramda": "^0.25.20",
        "@types/request": "^2.47.0",
        "@types/shelljs": "^0.7.8",
        "@types/supertest": "^2.0.4",
        "@types/winston": "^2.3.8",
        "chai": "^4.1.2",
        "concurrently": "^3.5.1",
        "jest": "^22.0.4",
        "nodemon": "^1.17.2",
        "shelljs": "^0.8.1",
        "supertest": "^3.0.0",
        "ts-jest": "^22.0.4",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2"
    }
}
