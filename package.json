{
    "name": "daze.api",
    "version": "1.1.0",
    "author": "afractal",
    "description": "Back-end for afractal blog.",
    "main": "dist/server.js",
    "license": "GPL-3.0",
    "private": true,
    "homepage": "https://github.com/afractal/Daze.Api#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/afractal/Daze.Api.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/Daze.Api/issues"
    },
    "scripts": {
        "postinstall": "npm run build",
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "test": "jest --forceExit --coverage --verbose",
        "test:watch": "npm test --watchAll",
        "test:coverage": "npm test -- --coverage",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TS,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TS,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "cors": "^2.8.4",
        "dotenv": "^5.0.1",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "express-validator": "^5.2.0",
        "humps": "^2.0.1",
        "pg": "^7.4.3",
        "ramda": "^0.25.0",
        "swagger-ui-express": "^3.0.8"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "^0.0.36",
        "@types/cors": "^2.8.4",
        "@types/dotenv": "^4.0.3",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.11.1",
        "@types/humps": "^1.1.2",
        "@types/jest": "^22.2.3",
        "@types/node": "^10.0.4",
        "@types/pg": "^7.4.8",
        "@types/ramda": "^0.25.24",
        "@types/request": "^2.47.0",
        "@types/supertest": "^2.0.4",
        "chai": "^4.1.2",
        "codeclimate-test-reporter": "^0.5.0",
        "concurrently": "^3.5.1",
        "jest": "^22.4.3",
        "nodemon": "^1.17.4",
        "supertest": "^3.0.0",
        "ts-jest": "^22.4.5",
        "ts-node": "^6.0.3",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3"
    }
}