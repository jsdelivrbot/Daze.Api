{
    "name": "daze.api",
    "version": "1.0.0",
    "author": "afractal",
    "description": "Back-end for afractal blog.",
    "main": "index.js",
    "license": "GPL-3.0",
    "homepage": "https://github.com/afractal/Daze.Api#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/afractal/Daze.Api.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/Daze.Api/issues"
    },
    "scripts": {
        "start": "concurrently \"tsc -w\" \"nodemon --exec node dist/src/server.js\"",
        "dev": "concurrently \"tsc -w\" \"nodemon --exec node dist/src/server.js\"",
        "build": "tsc",
        "build:dev": "webpack --config webpack.config.js --mode development",
        "build:prod": "webpack --mode production",
        "test": "concurrently \" tsc -w \" \" mocha --recursive ./dist/test --watch \" ",
        "testonce": " \" mocha --recursive ./dist/test \"",
        "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./dist/test/*"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "cors": "^2.8.4",
        "express": "^4.16.2",
        "graphql": "^0.13.1",
        "humps": "^2.0.1",
        "pg": "^7.4.1",
        "ramda": "^0.25.0",
        "swagger-ui-express": "^2.0.15"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/cors": "^2.8.3",
        "@types/express": "^4.11.1",
        "@types/humps": "^1.1.2",
        "@types/mocha": "^2.2.48",
        "@types/node": "^9.4.7",
        "@types/pg": "^7.4.5",
        "@types/ramda": "^0.25.19",
        "@types/webpack": "^4.1.0",
        "codeclimate-test-reporter": "^0.5.0",
        "concurrently": "^3.5.1",
        "file-loader": "^1.1.11",
        "istanbul": "^0.4.5",
        "json-loader": "^0.5.7",
        "mocha": "^5.0.1",
        "mocha-lcov-reporter": "^1.3.0",
        "source-map-loader": "^0.2.3",
        "ts-loader": "^4.0.1",
        "ts-node": "^5.0.1",
        "typescript": "^2.7.2",
        "webpack": "^4.1.1",
        "webpack-cli": "^2.0.11"
    }
}
