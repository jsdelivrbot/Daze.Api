{
    "name": "daze.api",
    "version": "1.1.0",
    "author": "afractal",
    "description": "Backend- for afractal blog.",
    "main": "dist/server.js",
    "license": "GPL-3.0",
    "private": true,
    "homepage": "https://github.com/afractal/Daze.Api#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/afractal/Daze.Api.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/Daze.Api/issues"
    },
    "scripts": {
        "postinstall": "npm run build",
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "test": "jest --forceExit --coverage --verbose",
        "test:watch": "npm test --watchAll",
        "test:coverage": "npm test -- --coverage",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TS,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TS,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "bcrypt": "^3.0.0",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.1",
        "compression": "^1.7.3",
        "cors": "^2.8.4",
        "dotenv": "^6.0.0",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "express-validator": "^5.3.0",
        "humps": "^2.0.1",
        "jsonwebtoken": "^8.3.0",
        "mongoose": "^5.2.7",
        "ramda": "^0.25.0",
        "validator": "^10.5.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^2.0.0",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "^0.0.36",
        "@types/cors": "^2.8.4",
        "@types/dotenv": "^4.0.3",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.16.0",
        "@types/humps": "^1.1.2",
        "@types/jest": "^23.3.1",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/mongoose": "^5.2.4",
        "@types/node": "^10.5.7",
        "@types/ramda": "^0.25.36",
        "@types/request": "^2.47.1",
        "@types/supertest": "^2.0.5",
        "@types/validator": "^9.4.1",
        "chai": "^4.1.2",
        "codeclimate-test-reporter": "^0.5.0",
        "concurrently": "^3.6.1",
        "jest": "^23.4.2",
        "nodemon": "^1.18.3",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1"
    }
}